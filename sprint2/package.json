{
  "name": "sprint2-enhanced-tracking",
  "version": "1.0.0",
  "description": "Sprint 2 - Enhanced environmental impact tracking with analytics and challenges",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd view && npm start",
    "build": "cd view && npm run build",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:frontend": "cd view && npm test",
    "test:backend": "jest tests/ --detectOpenHandles"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "node-cron": "^3.0.2",
    "recharts": "^3.1.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "controller/**/*.js",
      "model/**/*.js",
      "shared/**/*.js",
      "!**/node_modules/**"
    ]
  },
  "keywords": [
    "sustainability",
    "habit-tracker",
    "environment",
    "analytics",
    "challenges"
  ],
  "author": "Sustainable Habits Team",
  "license": "MIT"
}
